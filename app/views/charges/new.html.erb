<%= form_tag charges_path do %>
   <h2>Update to A Premium Account</h2>
   <script class='stripe-button' src="https://checkout.stripe.com/checkout.js" data-key="<%= @stripe_btn_data[:key] %>" data-amount="<%= @stripe_btn_data[:amount] %>" data-description="<%= @stripe_btn_data[:description] %>" ></script>
   <%= link_to "Click here to downgrade your account", charges_downgrade_path, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to downgrade? Your wikis will become public if you press OK.' } %>
<% end %>
